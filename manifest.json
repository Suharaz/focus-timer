{
  "manifest_version": 3,
  "name": "Focus Timer",
  "version": "1.0.0",
  "description": "Track time spent on websites, set limits, stay focused",
  "permissions": ["tabs", "storage", "unlimitedStorage", "alarms", "idle", "notifications", "identity", "scripting", "webNavigation", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "oauth2": {
    "client_id": "953768957828-fvft62g64iemqq2jsto98jg6n6ngdsl2.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/drive.appdata"]
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/floating-timer.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
